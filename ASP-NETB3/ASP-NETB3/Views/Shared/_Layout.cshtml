<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP_NETB3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP_NETB3.styles.css" asp-append-version="true" />
</head>
<body>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
        </li>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="Admin" asp-action="Index">Quản trị</a>
                </li>
            }
            <li class="nav-item">
                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                    <button type="submit" class="btn btn-link nav-link">Đăng xuất</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            </li>
        }
    </ul>

</body>
</html>
